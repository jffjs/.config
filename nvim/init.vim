let mapleader = "\<Space>"

" universal mappings
inoremap jk <esc>
nnoremap <leader>wv :vsplit<cr>
nnoremap <leader>wh :split<cr>

" navigation
" jump to last buffer
nnoremap <leader><tab> <C-^>

" directional window navigation
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
